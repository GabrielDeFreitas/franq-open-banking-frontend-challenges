# Mensagem inicial com cor azul
echo -e "\033[1;34m🔍 Running lint-staged to format and lint the staged files...\033[0m"
pnpm dlx lint-staged

# Mensagem de sucesso para lint-staged
echo -e "\033[1;32m✅ lint-staged completed successfully!\033[0m"

# Mensagem inicial para os testes com cor amarela
echo -e "\033[1;33m🧪 Running Jest tests with coverage...\033[0m"
pnpm run test

# Mensagem de sucesso para os testes
echo -e "\033[1;32m✅ All tests passed! Proceeding with the commit.\033[0m"